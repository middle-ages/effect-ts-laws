{
  "name": "effect-ts-laws",
  "version": "1.0.0",
  "type": "module",
  "description": "Law testing using fast-check.",
  "author": "Ran Eilam <ran@haag59.com> (https://middle-ages.github.io/)",
  "license": "MIT",
  "keywords": [
    "effect-ts",
    "fast-check",
    "law-testing"
  ],
  "scripts": {
    "clean": "scripts/clean",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "typecheck": "tsc --project tsconfig.json",
    "test": "vitest -c vitest.conf.ts --reporter=verbose",
    "coverage": "vitest -c vitest.conf.ts run --reporter=verbose --coverage",
    "test-run": "vitest -c vitest.conf.ts run",
    "test-dependencies": "depcruise src -c config/dependency-cruiser.cjs",
    "build": "tsc --project tsconfig.build.json",
    "run-tsx": "tsx --conditions test",
    "ls-deps": "pnpm ls --prod",
    "ls-deps-dev": "pnpm ls --dev",
    "graph-dependencies": "scripts/graph-dependencies"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@fast-check/vitest": "^0.1.2",
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.4.1",
    "@vitest/coverage-v8": "^2.0.5",
    "dependency-cruiser": "^16.4.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fast-check": "^3.21.0",
    "prettier": "^3.3.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@effect/typeclass": "^0.25.4",
    "effect": "^3.6.4"
  },
  "peerDependencies": {
    "effect": "workspace:^",
    "vitest": "^2.0.5"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "bracketSameLine": true,
    "endOfLine": "lf"
  }
}
